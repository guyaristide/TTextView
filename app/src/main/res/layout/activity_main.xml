<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/lib/agnamc.ci.library.TTextView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app1="http://schemas.android.com/apk/res-auto"
    tools:context="agnamc.ci.ttextview.MainActivity"
    android:orientation="vertical"
    android:padding="16dp">

    <agnamc.ci.library.TTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Atlantide Starlight"
        app1:customTypeface="AtlantideStarlight.ttf"
        android:textSize="50sp"
        />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Atlantide Starlight"
        android:textSize="25sp"/>

</LinearLayout>
